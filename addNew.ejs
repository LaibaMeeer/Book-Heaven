<%- include("header.ejs") %>
<h1 style="text-align: center; color: #333333;">Add New Book</h1>
<form action="/add" method="post" >
  <div class="row mb-3 text-left" style="padding: 20px;">
      <div class="col-md-6 themed-grid-col" >
        <div class="pb-3">
         <img src="/images/bookBack.webp" height="330px" class="col-md-12 themed-grid-col"/>
        </div>
        <div class="row">
          <div class="col-md-12 themed-grid-col">
            <label for="title">Title </label>
            <input type="text" class="form-control" name="title"  placeholder="Title">
          </div>
          <div class="col-md-12 themed-grid-col">
            <label for="author">Author Name</label>
          <input type="text" class="form-control"name="author"   placeholder="Author Name">
          </div>
  
          <div class="col-md-12 themed-grid-col">
            <label for="status">Status</label>
            <input type="text" class="form-control" name="status"  placeholder="Status">
          </div>
  
          <div class="col-md-12 themed-grid-col">
             <label for="rate">Rate</label>
            <input type="text" class="form-control" name="rate"  placeholder="Rate">
          </div>
        </div>
      </div>
      <div class="col-md-6 themed-grid-col" id="2-c">
        <label for="notes">Notes</label>
        <textarea type="text" class="form-control" name="notes"  placeholder="Notes" style="height: 500px;" ></textarea>
        <button class="btn  w-100 py-2" type="submit" style="margin-top: 5px;" id="edit">Add</button>
      </div>
  </div>
  </form>
  


<%- include("footer.ejs") %>